@model IEnumerable<BSMWeb.Models.Training>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterPages/_LayoutAdmin.cshtml";
}
}
@section PageStyle {
    @*You can add your custom style sheets for each page on this section.*@
    <link rel="stylesheet" href="http://cdn.datatables.net/plug-ins/725b2a2115b/integration/bootstrap/3/dataTables.bootstrap.css" />
}
@section PageJavaScript{
    @*You can add your custom JavaScript for each page on this section. This section will be added to the bottom of the page.*@
    <script type="text/javascript" src="../Content/Scripts/plugins/dataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="http://cdn.datatables.net/plug-ins/725b2a2115b/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}
<section id="main-content">
    <section class="wrapper site-min-height">
        <h3>
            Training Status
        </h3>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="title">
                            Training List
                        </h4>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TrainingDescription)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="gradeU">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrainingDescription)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Create", "Create")|
                                                @Html.ActionLink("Edit", "Edit", new { id = item.TrainingId }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.TrainingId }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.TrainingId })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>