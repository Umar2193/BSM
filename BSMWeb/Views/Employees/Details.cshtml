@model BSMWeb.Models.Employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/MasterPages/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper site-min-height">
        <h3>
            Employee
        </h3>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="title">
                            Detail
                        </h4>
                    </div>
                    <div class="panel-body">
                        <div>
                            
                            <dl class="dl-horizontal">
                                <dt>
                                    Surname
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.LastName)
                                </dd>
                                <dt>
                                    First Name
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.FirstName)
                                </dd>

                                <dt>
                                    Department
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Department.DepartmentName)
                                </dd>
                                <dt>
                                   Job Title
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.JobTitle.JobTitleName)
                                </dd>
                                <dt>
                                   Employee Active
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.EmployeeStatus)
                                </dd>
                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeId }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

